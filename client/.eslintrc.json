{
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended",
    "plugin:react/recommended", "prettier", "prettier/react"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "import", "react-hooks"],
  "rules": {
    "react/prop-types":0,
    "no-console":1,
    "react-hooks/rules-of-hooks":2,
    "react-hooks/exhaustive-deps":1
  },
  "settings": {
    "react": {
      "pragma": "React",  
      "version": "detect"
     }
  }
}
